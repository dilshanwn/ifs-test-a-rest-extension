{
  "name": "ifs-test-a-rest-extension",
  "displayName": "IFS Test-A-REST Extension",
  "description": "IFS TAR Script Extension for VS Code",
  "version": "0.0.1",
  "publisher": "ifs-labs",
  "repository": "https://github.com/dilshanwn/ifs-test-a-rest-extension",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.md"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ifs-test-a-rest-extension.ifs-tar-run",
        "title": "Run TAR Script"
      }
    ],
   "configuration":[
    {
      "title": "IFS TAR",
      "properties": {
        "IfsTar.tarExeLocation": {
          "order": 0,
          "type": "string",
          "scope": "machine",
          "description": "Absolute path to the TestARest.exe ending with TestARest.exe"
        },
        "IfsTar.ifsUrl": {
          "order": 1,
          "type": "string",
          "scope": "machine",
          "description": "URL for IFS Environment"
        },
        "IfsTar.ifsUserName": {
          "order": 2,
          "type": "string",
          "scope": "machine",
          "description": "Username for IFS Environment"
        },
        "IfsTar.ifsPassword": {
          "order": 3,
          "type": "string",
          "scope": "machine",
          "description": "Password for IFS Environment"
        }
        
      }
    }
   ],
   "menus":{
    "explorer/context":[
      {
        "command": "ifs-test-a-rest-extension.ifs-tar-run",
        "when": "resourceExtname == .md || resourceExtname == .mdk"
      }
    ]
   } 
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@vscode/vsce":"^2.17.0",
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
